{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body%}
<h1>Page d'inscription</h1>
    {{ form_start(form) }}

    {{ form_row(form.username, {'label': 'Nom d\'utilisateur', 'attr': {'placeholder': 'Votre nom d\'utilisateur...'}}) }}
    {{ form_row(form.email, {'label': 'Adresse email', 'attr': {'placeholder': 'Votre adresse email...'}}) }}
    {{ form_row(form.password, {'label': 'Mot de passe', 'attr': {'placeholder': 'Votre mot de passe...'}}) }}
    {{ form_row(form.confirm_password, {'label': 'Confirmation mot de passe', 'attr': {'placeholder': 'Confirmez votre mot de passe...'}}) }}

    <button type="submit" class="btn btn-success">S'inscrire</button>
    {{ form_end(form) }}
{% endblock %}