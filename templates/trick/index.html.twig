{% extends 'base.html.twig' %}

{% block title %}La page des figures{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello ! âœ…</h1>
    <a href="{{ path('trick_new') }}">Ajouter une figure</a>
    <h2>Voici toutes les figures :</h2>

    {% for trick in trick %}
        <div class="article-card">
            <h3><a href="{{ path('trick_show', {'id': trick.id}) }}">{{ trick.title }}</a></h3>
            <p>{{ trick.description }}</p>
            <span class="date">{{ trick.createdAt|date('d/m/Y') }}</span>
        </div>
    {% endfor %}


</div>
{% endblock %}
