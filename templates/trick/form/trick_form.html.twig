{{ form_start(form) }}

<div class="form-group col-8">
    {{ form_row(form.title, {'label': 'Titre', 'attr': {'placeholder': 'Titre de la figure...'}}) }}
    {{ form_row(form.description, {'label': 'Description', 'attr': {'placeholder': 'Description de la figure...'}}) }}
    {{ form_row(form.category) }}
</div>

{# test #}

<ul id="picture-fields-list"
    data-prototype="{{ form_widget(form.pictures.vars.prototype)|e }}"
    data-widget-tags="{{ '<li></li>'|e }}"
    {% for pictureField in form.pictures %}
        <li>
            {{ form_errors(pictureField) }}
            {{ form_widget(pictureField) }}
        </li>
    {% endfor %}
</ul>

<button type="button" class="add-another-collection-widget" data-list-selector="#picture-fields-list">
    Ajouter une image
</button>

